<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.UniversityActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.esielkar.calificame.view.UniversityCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:university_name="BUAP"
            app:cardElevation="16dp" />

        <com.esielkar.calificame.view.FacultyCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:faculty_name="Computación"
            app:faculty_professors_count="100"/>
        <com.esielkar.calificame.view.ProfessorCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:professor_name="Esiel"
            app:professor_reviews_count="10" />

        <com.esielkar.calificame.view.SubjectCardView
            android:background="@drawable/gradient_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:subject_name="Programación II"/>
        <com.esielkar.calificame.view.HeaderCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:header_card_title="Benemérita Universidad Autónoma de Puebla"/>
        <com.esielkar.calificame.view.HeaderCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:header_card_title="Benemérita Universidad Autónoma de Puebla"
            app:header_card_subtitle="Facultad de Cs. de la computación"/>
        <com.esielkar.calificame.view.HeaderCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:header_card_title="Hilda Castillo Zacatelco"
            app:header_card_subtitle="Facultad de Cs. de la computación"
            app:header_card_overline="Benemérita Universidad Autónoma de Puebla"/>

        <com.esielkar.calificame.view.PreviewCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:preview_card_leading_drawable="@drawable/ic_outline_person_outline_24"
            app:preview_card_title="Esiel"
            app:preview_card_subtitle="Arizmendi Ramírez"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>