<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="24dp"
    android:layout_marginHorizontal="16dp"
    android:orientation="vertical"
    tools:context=".view.FacultyActivity">


    <com.esielkar.calificame.view.HeaderCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="16dp"
        app:cardCornerRadius="8dp"
        app:contentPaddingRight="16dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingBottom="16dp"
        app:contentPaddingTop="16dp"
        app:header_card_title="Facultad de Cs. de la Computación" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/teachers_label"
            android:textSize="24sp"
            android:textStyle="bold" />
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_teacher"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.esielkar.calificame.view.TeacherCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/blue_500"
                android:layout_marginVertical="4dp"
                app:teacher_name="Mayra Jiménez Maldonado"/>

            <com.esielkar.calificame.view.TeacherCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/blue_500"
                android:layout_marginVertical="4dp"
                app:teacher_name="Luis David Ayala López"/>

            <com.esielkar.calificame.view.TeacherCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/blue_500"
                android:layout_marginVertical="4dp"
                app:teacher_name="Esiel Kevin Arizmendi Ramírez"/>

            <com.esielkar.calificame.view.TeacherCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/blue_500"
                android:layout_marginVertical="4dp"
                app:teacher_name="Héctor Manuel Chávez Troncoso"/>



        </LinearLayout>
    </ScrollView>
</LinearLayout>